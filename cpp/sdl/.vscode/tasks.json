{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "cpp build active file",
            "command": "g++",
            "args": [
                "${workspaceFolder}/inherited.cpp",
                "-lSDL2",
                "-o",
                "${workspaceFolder}/build/inherited",
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}