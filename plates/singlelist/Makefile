CXX=g++
CXXFLAGS=-g -Wall

###############################################################################
# Driver
###############################################################################

driver:	driver.cpp	singlelist.o
	${CXX} ${CXXFLAGS} driver.cpp singlelist.o -o driver

###############################################################################
# SingleList
###############################################################################

singlelist.o:	singlelist.cpp singlelist.h
	${CXX} ${CXXFLAGS} -c singlelist.cpp -o singlelist.o

###############################################################################
# Clean
###############################################################################

clean:
	rm -f *.o driver
