CXX=g++
CXXFLAGS=-g -Wall

###############################################################################
# Driver
###############################################################################

driver:	driver.cpp	linkedlist.o
	${CXX} ${CXXFLAGS} driver.cpp linkedlist.o -o driver

###############################################################################
# LinkedList
###############################################################################

linkedlist.o:	linkedlist.cpp linkedlist.h
	${CXX} ${CXXFLAGS} -c linkedlist.cpp -o linkedlist.o

###############################################################################
# Clean
###############################################################################

clean:
	rm -f *.o driver
